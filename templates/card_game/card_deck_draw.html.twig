{% extends "base.html.twig" %}

{% block title %}Game{% endblock %}

{% block body %}
    <div class="card-home">
        <h1>Draw a card from the deck</h1>
        <p>Number of cards left: {{ deckCount }}</p>
        <div>
        <span class="card" style="font-size: 100px; color: {{ cardColor }}">&#{{ cardString }}</span>
        </div>
        <a href="{{ path('card_home') }}">Back to game landing page</a>
    </div>
{% endblock %}