<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{ asset('img/maple.jpg') }}">
    {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> #}
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    <header class="site-header" style="background-image: url({{ asset('img/webtech.png') }})">
        <span class="site-title">MVC</span>
    </header>
    <nav class="nav">
        <ul>
            <li><a href="{{ path('home') }}">Home</a></li>
            <li><a href="{{ path('about') }}">About</a></li>
            <li><a href="{{ path('report') }}">Report</a></li>
            <li><a href="{{ path('lucky') }}">Lucky</a></li>
            {# <li><a href="{{ path('quote') }}">Today's quote</a></li> #}
            <li><a href="{{ path('card_home') }}">Game</a></li>
            <li><a href="{{ path('api') }}">API</a></li>
            <li><a href="{{ path('session_show') }}">Session</a></li>
            <li><a href="{{ path('game_home') }}">Twenty One</a></li>
        </ul>
    </nav>

    {# Flash messages display area #}
    <div class="flash-messages">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {% block body %}{% endblock %}

    <footer>
        {% block footer %}
        <div class="footer">
            <p>&copy; Hafsa Choudhury 2024</p></p>
        </div>
        {% endblock %}
    </footer>
</body>
</html>

